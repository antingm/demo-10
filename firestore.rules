/**
 * ==========================================
 * Firestore 安全規則
 * ==========================================
 * 確保只有擁有者可以編輯自己的資料
 */

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 個人資料集合
    match /profiles/{profileId} {
      // 任何人都可以讀取（公開展示）
      allow read: if true;
      
      // 只有擁有者可以寫入
      allow write: if request.auth != null 
                   && request.auth.uid == profileId;
    }
    
    // 站點設定（單一文件）
    match /settings/site {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
